# Production Environment Configuration
# Copy this to .env.production and fill in your values
# NEVER commit .env.production to git!

# ===========================================
# DOMAIN CONFIGURATION
# ===========================================
DOMAIN=your-domain.com

# ===========================================
# CLOUDFLARE CONFIGURATION
# ===========================================
CF_EMAIL=your-cloudflare-email@example.com
CF_API_KEY=your-cloudflare-api-key
CF_ACCOUNT_ID=your-account-id
CF_ZONE_ID=your-zone-id

# ===========================================
# STRIPE CONFIGURATION (LIVE KEYS)
# ===========================================
STRIPE_SECRET_KEY=sk_live_xxxxx
STRIPE_PUBLISHABLE_KEY=pk_live_xxxxx
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxx

# ===========================================
# DATABASE
# ===========================================
POSTGRES_PASSWORD=generate-a-strong-password-here
DATABASE_URL=postgres://temporal:${POSTGRES_PASSWORD}@postgresql:5432/billing?sslmode=disable

# ===========================================
# AUTHENTICATION
# ===========================================
# For Cloudflare Access (recommended for production)
AUTH_MODE=cloudflare-access
CF_ACCESS_TEAM_DOMAIN=your-team.cloudflareaccess.com
CF_ACCESS_AUD=your-application-audience-tag

# For NextAuth (development/fallback)
NEXTAUTH_SECRET=generate-a-random-secret-here
NEXTAUTH_URL=https://app.your-domain.com

# OAuth Providers (if using NextAuth)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
AZURE_AD_CLIENT_ID=
AZURE_AD_CLIENT_SECRET=
AZURE_AD_TENANT_ID=common

# ===========================================
# EMAIL CONFIGURATION (for transactional emails)
# ===========================================
# Using Resend (recommended)
RESEND_API_KEY=re_xxxxx
EMAIL_FROM=noreply@your-domain.com

# Or using SMTP
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@your-domain.com

# ===========================================
# SERVICE URLS
# ===========================================
NEXT_PUBLIC_BILLING_API_URL=https://api.your-domain.com
NEXT_PUBLIC_TEMPORAL_UI_URL=https://temporal.your-domain.com
NEXT_PUBLIC_APP_URL=https://app.your-domain.com
NEXT_PUBLIC_MARKETING_URL=https://your-domain.com

# ===========================================
# MONITORING
# ===========================================
GRAFANA_PASSWORD=generate-a-password-here
